<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
>
    <android.support.v7.widget.CardView
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:id="@+id/card_view"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="200dp"
            card_view:cardCornerRadius="4dp">
    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <ImageView
                android:id="@+id/placeTypeIcon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="false"
                android:layout_alignParentLeft="false"
                android:layout_alignParentStart="true" android:layout_alignParentBottom="false"
                android:layout_toRightOf="@+id/placeName" android:src="@drawable/ic_place_black_24dp"
                android:paddingLeft="16dp" android:alpha=".20"/>
        <TextView
                android:id="@+id/placeName"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:text="Place name"
                android:textSize="@dimen/abc_text_size_body_1_material"/>

        <TextView
                android:id="@+id/placeAddress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Address"
                android:textSize="@dimen/abc_text_size_body_1_material"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="5dp" android:gravity="center_vertical|center_horizontal"
                android:layout_below="@+id/placeName" android:layout_centerInParent="true"
        />

        <ImageView
                android:id="@+id/placePhoneIcon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="false"
                android:layout_alignParentLeft="false"
                android:layout_alignParentStart="true" android:layout_alignParentBottom="false"
                android:layout_toRightOf="@+id/placePhone" android:src="@drawable/ic_place_black_24dp"
                android:alpha=".20" android:layout_below="@+id/placeTypeIcon"
                android:paddingLeft="16dp"/>
        <TextView
                android:id="@+id/placePhone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Phone"
                android:gravity="center_vertical"
                android:textSize="@dimen/abc_text_size_body_1_material"
                android:layout_below="@id/placeAddress"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="5dp" android:layout_centerInParent="true"/>

        <TextView
                android:id="@+id/placeUrl"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="URL"
                android:textSize="@dimen/abc_text_size_body_1_material"
                android:layout_marginTop="10dp"
                android:layout_alignParentRight="false"
                android:layout_marginRight="150dp"
                android:layout_alignWithParentIfMissing="false" android:layout_below="@+id/placePhone"
                android:layout_centerInParent="true"/>

    </RelativeLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>