<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        card_view:cardCornerRadius="4dp">

    <android.support.v7.widget.LinearLayoutCompat
            android:layout_width="wrap_content"
            android:layout_height="200dp"
            android:orientation="vertical">

    <LinearLayout android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:orientation="horizontal"
                  android:clickable="true" android:padding="10dp">
        <ImageView
                android:id="@+id/placeTypeIcon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_place_black_24dp"
                android:paddingLeft="5dp"
                android:paddingRight="10dp"
                android:alpha=".20"/>
        <TextView
                android:id="@+id/placeNameAndAddress"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Place name and address"
                android:textSize="@dimen/abc_text_size_body_1_material" android:layout_gravity="center_vertical"/>
    </LinearLayout>

    <LinearLayout android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:orientation="horizontal" android:padding="10dp">
        <ImageView
                android:id="@+id/placePhoneIcon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@android:drawable/ic_menu_call"
                android:alpha=".20"
                android:paddingLeft="5dp"
                android:paddingRight="10dp"/>
        <TextView
                android:id="@+id/placePhone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Phone"
                android:textSize="@dimen/abc_text_size_body_1_material" android:layout_gravity="center_vertical"/>
    </LinearLayout>
    <LinearLayout android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:orientation="horizontal" android:padding="10dp">
        <ImageView
                android:id="@+id/placeWebIcon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_web_black_24dp"
                android:alpha=".20"
                android:paddingLeft="5dp"
                android:paddingRight="10dp"/>
        <TextView
                android:id="@+id/placeUrl"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="URL"
                android:textSize="@dimen/abc_text_size_body_1_material" android:layout_gravity="center_vertical"/>
     </LinearLayout>
        <LinearLayout android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:orientation="horizontal" android:padding="10dp">
            <ImageView
                    android:id="@+id/TypeIcon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_place_black_24dp"
                    android:alpha=".20"
                    android:paddingLeft="5dp"
                    android:paddingRight="10dp"/>
            <TextView
                    android:id="@+id/placeType"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Restaurant"
                    android:textSize="@dimen/abc_text_size_body_1_material" android:layout_gravity="center_vertical"/>
        </LinearLayout>

    </android.support.v7.widget.LinearLayoutCompat>
    </android.support.v7.widget.CardView>
